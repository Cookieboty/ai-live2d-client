{
  "name": "@ig-live/electron",
  "version": "1.0.0",
  "description": "Electron主进程和预加载脚本",
  "main": "dist/main.js",
  "scripts": {
    "dev": "concurrently \" tsc -w\" \"cross-env NODE_ENV=development electron .\"",
    "prebuild": "npm run clean",
    "build": "tsc && npm run copy-renderer",
    "copy-renderer": "node scripts/copy-renderer.js",
    "clean": "rimraf dist",
    "package": "npm run package:prod",
    "package:prod": "npm run build && electron-builder build",
    "package:prod:mac": "npm run build && electron-builder build --mac",
    "package:prod:win": "npm run build && electron-builder build --win",
    "package:debug": "npm run build && cross-env DEBUG=true electron-builder build --config.asar=false -c.extraMetadata.debug=true",
    "package:debug:mac": "npm run build && cross-env DEBUG=true electron-builder build --mac --config.asar=false -c.extraMetadata.debug=true",
    "package:debug:win": "npm run build && cross-env DEBUG=true electron-builder build --win --config.asar=false -c.extraMetadata.debug=true",
    "launch:debug": "electron . --debug-mode"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
  },
  "devDependencies": {
    "@ig-live/types": "workspace:*",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "electron": "25.9.8",
    "electron-builder": "^23.6.0",
    "electron-reload": "2.0.0-alpha.1",
    "fs-extra": "^11.2.0",
    "rimraf": "^5.0.0",
    "typescript": "^4.9.0",
    "wait-on": "^7.0.1"
  },
  "build": {
    "appId": "com.ig-live.electron",
    "productName": "AI看板娘",
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "../renderer/dist",
        "to": "renderer"
      }
    ],
    "directories": {
      "buildResources": "assets",
      "output": "../../dist"
    },
    "mac": {
      "category": "public.app-category.entertainment",
      "target": "dmg",
      "icon": "assets/logo.jpg"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/logo.jpg"
    },
    "extraMetadata": {
      "main": "dist/main.js"
    },
    "protocols": [
      {
        "name": "AI看板娘",
        "schemes": ["ai-live"]
      }
    ]
  }
}